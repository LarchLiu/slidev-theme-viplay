{
  "compilerOptions": {
    "module": "ESNext",
    "baseUrl": ".",
    "target": "es2016",
    "lib": ["DOM", "ESNext"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "types": [
      "vite/client",
      "node",
      "vite-plugin-vue-server-ref/module"
    ],
  },
  "include": [
    "./logic/*.ts",
    "./*.ts",
    "vite.config.js",
  ],
  "exclude": ["**/dist/**", "node_modules"]
}
